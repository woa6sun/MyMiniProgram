
.table {
  display: table;
  width: 80%;
  border-collapse: collapse;
  margin: 0 auto;
  padding: 0;
  font-size: 14px;
  font-family: Arial, 宋体, Helvetica, sans-serif;
}

.table-tr {
  display: table-row;
  height: 30px;
}

.table-th {
  display: table-cell;
  font-weight: bold;
  height: 100%;
  border: 1px solid gray;
  text-align: center;
  vertical-align: middle;
  background-color: #e5e5e5;
}

.table-td {
  display: table-cell;
  height: 100%;
}

.sub-table {
  width: 100%;
  height: 100%;
  display: table;
}

.sub-table-tr {
  display: table-row;
  height: 100%;
}

.sub-table-td {
  display: table-cell;
  height: 100%;
  border: 1px solid gray;
  text-align: center;
  vertical-align: middle;
}
